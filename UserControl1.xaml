<UserControl x:Class="_20180319Sample.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_20180319Sample"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <Calendar x:Name="take" SelectedDatesChanged="take_SelectedDatesChanged">
            <Calendar.Background>White</Calendar.Background>
            <Calendar.CalendarDayButtonStyle>
                <Style TargetType="CalendarDayButton">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <!--<Border Width="50" Height="50" BorderThickness="2" BorderBrush="DodgerBlue">-->
                                <StackPanel Width="50" Height="60" Margin="2" >
                                    <TextBlock Text="{Binding}" />
                                    <Canvas MouseLeftButtonDown="Canvas_MouseLeftButtonDown" >
                                        <Image x:Name="Image_Icon"  Width="10" Height="10" Source="Resources/meat.png" Stretch="Uniform"></Image>
                                    </Canvas>
                                    <!--<Image Source="Resources/meat.png"></Image>-->
                                </StackPanel>
                                <!--</Border>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Calendar.CalendarDayButtonStyle>
        </Calendar>
    </Grid>
</UserControl>