<UserControl x:Class="_20180319Sample.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_20180319Sample"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500">

    <UserControl.Resources>
        <BitmapImage UriSource="Resources/meat.png" x:Key="meetImage" />
        <!--<local:CalendarConverter x:Key="calendarConv" />-->
        <!--<local:CalendarConverter x:Key="conv"/>-->
        <!--<local:CalendarConverter x:Key="conv"/>-->
    </UserControl.Resources>
    <Grid>
        <Calendar x:Name="FoodCalendar" SelectedDatesChanged="take_SelectedDatesChanged" IsTodayHighlighted="False">
            <Calendar.Background>White</Calendar.Background>
            <Calendar.CalendarDayButtonStyle>
                <Style TargetType="CalendarDayButton">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <!--<DataTemplate.Resources>
                                    <local:CalendarConverter x:Key="conv"/>
                                </DataTemplate.Resources>-->
                                <StackPanel x:Name="dayPanel">
                                    <TextBlock Text="{Binding ElementName=dayPanel, Path=DataContext}" FontSize="12" />
                                    <ItemsControl ItemsSource="{Binding Converter={StaticResource conv}}" x:Name="FoodItemsControl">
                                        <ItemsControl.Template>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <Border BorderThickness="2" BorderBrush="Black">
                                                    <ItemsPresenter MinWidth="55" MinHeight="60" />
                                                </Border>
                                            </ControlTemplate>
                                        </ItemsControl.Template>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:Food}">
                                                <Image Source="{Binding Path=FoodImage}" MaxHeight="20" Stretch="Uniform"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Calendar.CalendarDayButtonStyle>
        </Calendar>
    </Grid>
</UserControl>