<Window x:Class="_20180319Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20180319Sample"
        mc:Ignorable="d"
        Title="賞味期限カレンダー" Height="559.547" Width="700" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="Auto">
                <MenuItem Header="追加(_E)" Click="AddMenu_OnClick" FontSize="14" Margin="2" />
                <MenuItem Header="編集(_E)" Click="EditMenu_OnClick"  FontSize="14" Margin="2"/>
            </Menu>
            <StackPanel Orientation="Horizontal">
                <local:FoodCalendarControl x:Name="CalendarControl" Margin="10" DayClick="CalendarControl_DayClick"  />
                <local:FoodInfoControl x:Name="FoodInformation" Margin="10" BorderBrush="Black" BorderThickness="3" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>